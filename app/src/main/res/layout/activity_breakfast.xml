<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kui.com.greenkiondo.BreakfastActivity">

    <TextView
        android:id="@+id/tv_bfast"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/breakfast"
        android:textSize="@dimen/title"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/aileron_light"
        android:background="@drawable/breakfast"
        android:textColor="@color/primaryTextColor"
        android:scaleType="centerInside"
        />

    <ListView
        android:id="@+id/list_bfast"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_bfast"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_row_selector" />

</RelativeLayout>
